{
  "name": "rivet",
  "private": false,
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "husky": "^9.1.6",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "lint-staged": "^15.2.10"
  },
  "scripts": {
    "prepare": "husky",
    "build": "pnpm --recursive run build"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome check --write --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
